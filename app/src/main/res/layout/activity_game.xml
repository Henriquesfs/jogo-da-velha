<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#222222" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placar"
        android:textColor="#222222"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnVoltar"
        app:layout_constraintBottom_toBottomOf="@id/btnVoltar" />

    <!-- Placar -->
    <LinearLayout
        android:id="@+id/layoutPlacar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar">

        <TextView
            android:id="@+id/tvPlacarX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador X: 0"
            android:textColor="#222222"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvEmpates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empates: 0"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvPlacarO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador O: 0"
            android:textColor="#222222"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Vez do jogador -->
    <TextView
        android:id="@+id/tvVezJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Vez de: X"
        android:textColor="#7B1FA2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPlacar" />

    <!-- Tabuleiro do jogo -->
    <GridLayout
        android:id="@+id/gridTabuleiro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVezJogador"
        app:layout_constraintWidth_percent="0.85">

        <!-- Linha 1 -->
        <Button
            android:id="@+id/btn00"
            style="@style/BotaoTabuleiro"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn01"
            style="@style/BotaoTabuleiro"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn02"
            style="@style/BotaoTabuleiro"
            android:layout_row="0"
            android:layout_column="2" />

        <!-- Linha 2 -->
        <Button
            android:id="@+id/btn10"
            style="@style/BotaoTabuleiro"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn11"
            style="@style/BotaoTabuleiro"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn12"
            style="@style/BotaoTabuleiro"
            android:layout_row="1"
            android:layout_column="2" />

        <!-- Linha 3 -->
        <Button
            android:id="@+id/btn20"
            style="@style/BotaoTabuleiro"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn21"
            style="@style/BotaoTabuleiro"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn22"
            style="@style/BotaoTabuleiro"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

    <!-- Botão Reiniciar -->
    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#7B1FA2"
        android:text="Reiniciar Jogo"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/gridTabuleiro"
        app:layout_constraintStart_toStartOf="@id/gridTabuleiro"
        app:layout_constraintTop_toBottomOf="@id/gridTabuleiro" />

</androidx.constraintlayout.widget.ConstraintLayout>